<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <properties>
        <!-- Format of the data written to log files. -->
        <property name="format">%d{yyyy-MMM-dd HH:mm:ss:sss} %p [%t] %c %m%n</property>
        <property name="log_root">../../logs</property>
    </properties>

    <Appenders>
        <!-- Create a log file to hold info/warn log level details. -->
        <RollingRandomAccessFile name="spring-ussd-info-log"
                                 fileName="${log_root}/spring.ussd.info.log"
                                 filePattern="${log_root}/spring.ussd.info.%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>${format}</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Roll over the file next day. -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Maximum file size for the log file. Data will move to a new file after exceeding this limit. -->
                <SizeBasedTriggeringPolicy size="2 MB"/>
            </Policies>
            <!-- Maximum number of files to keep. -->
            <DefaultRolloverStrategy max="20"/>
            <!-- Data of error/fatal log levels will be opted out when writing to the file. -->
            <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="NEUTRAL"/>
        </RollingRandomAccessFile>

        <!-- Create a log file to hold error/fatal log level details. -->
        <RollingRandomAccessFile name="spring-ussd-error-log"
                                 fileName="${log_root}/spring.ussd.error.log"
                                 filePattern="${log_root}/spring.ussd.error.%d{yyyy-MM-dd}-%i.log">
            <PatternLayout>
                <Pattern>${format}</Pattern>
            </PatternLayout>
            <Policies>
                <!-- Roll over the file next day. -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- Maximum file size for the log file. Data will move to a new file after exceeding this limit. -->
                <SizeBasedTriggeringPolicy size="1 MB"/>
            </Policies>
            <!-- Maximum number of files to keep. -->
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>

        <!-- Standard console output. -->
        <Console name="spring-ussd-console-log" target="SYSTEM_OUT">
            <PatternLayout pattern="${format}"/>
        </Console>
    </Appenders>

    <Loggers>
        <!--<Root level="info">
            <AppenderRef ref="spring-ussd-info-log" level="info"/>
            <AppenderRef ref="spring-ussd-error-log" level="error"/>
            <AppenderRef ref="spring-ussd-console-log" level="info"/>
        </Root>-->

        <Logger name="spring.boot.ussd" level="info">
            <AppenderRef ref="spring-ussd-info-log" level="info"/>
            <AppenderRef ref="spring-ussd-error-log" level="error"/>
            <AppenderRef ref="spring-ussd-console-log" level="info"/>
        </Logger>
    </Loggers>
</Configuration>